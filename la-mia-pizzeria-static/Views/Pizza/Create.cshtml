@model PizzaFormModel

<div class="container">
    <div class="row">
        <div class="col-12 mb-3">
            <h1>Create A New Pizza</h1>
        </div>
        <form asp-controller="Pizza" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <strong>Name:</strong>
                <input type="text" class="form-control" asp-for="Pizza.Name">
                <span asp-validation-for="Pizza.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Description:</strong>
                <input type="text" class="form-control" asp-for="Pizza.Description">
                <span asp-validation-for="Pizza.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Category:</strong>
                <select asp-for="Pizza.CategoryId" rows="10" class="d-block w-100">
                    <option value="">Select a category...</option>
                    @foreach (Category category in Model.Categories)
                    {
                        <option value="@category.CategoryId">@category.Title</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <strong>Choose Ingredients:</strong>
                <select asp-for="SelectedIngredientsId"
                        multiple="multiple"
                        size="10"
                        class="form-control mb-2 mr-sm-2 ml-sm-3 leftList"
                        asp-items="@Model.Ingredients">
                </select>
            </div>
            <div class="mb-3">
                <strong>Image Path:</strong>
                <input type="text" class="form-control" asp-for="Pizza.ImgPath">
                <span asp-validation-for="Pizza.ImgPath" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Price:</strong>
                <input type="text" class="form-control" asp-for="Pizza.Price">
                <span asp-validation-for="Pizza.Price" class="text-danger"></span>
            </div>
            <button type="submit" class="btn my-btn my-3">Create a new pizza</button>
        </form>
    </div>
</div>
