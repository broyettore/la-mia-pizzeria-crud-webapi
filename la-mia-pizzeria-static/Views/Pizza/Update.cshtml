@model PizzaFormModel

<div class="container">
    <div class="row">
        <div class="col-12 mb-3">
            <h1>Edit A Pizza</h1>
        </div>
        <form asp-controller="Pizza" asp-action="Update" asp-route-id="@Model.Pizza.PizzaId" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Pizza.PizzaId" />
            <div class="mb-3">
                <strong>Name:</strong>
                <input asp-for="Pizza.Name" class="d-block w-100" />
                <span asp-validation-for="Pizza.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Description:</strong>
                <input asp-for="Pizza.Description" class="d-block w-100" />
                <span asp-validation-for="Pizza.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Category:</strong>
                <select asp-for="Pizza.CategoryId" rows="10" class="d-block w-100">
                    <option value=""></option>
                    @foreach (Category category in Model.Categories)
                    {
                        @if (Model.Pizza.CategoryId == category.CategoryId)
                        {
                            <option value="@category.CategoryId" selected>@category.Title</option>
                        }
                        else
                        {
                            <option value="@category.CategoryId">@category.Title</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3">
                <strong>Choose Ingredients:</strong>
                <select asp-for="SelectedIngredientsId"
                        multiple="multiple"
                        size="10"
                        class="form-control mb-2 mr-sm-2 ml-sm-3 leftList"
                        asp-items="@Model.Ingredients">
                </select>
            </div>
            <div class="mb-3">
                <strong>Image Path:</strong>
                <input asp-for="Pizza.ImgPath" class="d-block w-100" />
                <span asp-validation-for="Pizza.ImgPath" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <strong>Price:</strong>
                <input asp-for="Pizza.Price" class="d-block w-100" />
                <span asp-validation-for="Pizza.Price" class="text-danger"></span>
            </div>

            <div class="text-start">
                <input type="submit" class="btn my-btn my-3" value="Updates Pizza">
            </div>
        </form>
    </div>
</div>
